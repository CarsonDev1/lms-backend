# Docker Environment Variables for Production

# Application
NODE_ENV=production
PORT=5000
API_URL=http://localhost:5000

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-strong-password-in-production
MONGODB_URI=mongodb://admin:change-this-strong-password-in-production@mongodb:27017/lms-database?authSource=admin

# JWT Configuration
JWT_ACCESS_SECRET=change-this-to-a-very-secure-random-string-for-production
JWT_REFRESH_SECRET=change-this-to-another-very-secure-random-string-for-production
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_ISSUER=lms-backend
JWT_AUDIENCE=lms-client

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
